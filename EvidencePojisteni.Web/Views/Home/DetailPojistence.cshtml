@model EvidencePojisteni.Web.Class.PojisteniPojisteneOsobyViewModel
@{
    ViewData["Title"] = "Detail Pojištěnce";
}
<div class="profile-info">
    <h2>@Model.Osoba.Jmeno</h2>
    <div class="profile-details">
        <div class="col">
         </div>
        <div class="col">
            
@Model.Osoba.Telefon        </div>
    </div>
</div>
</div>

<div class=>
    <h3>Sjednaná pojištění</h3>
    <table class=>
        <tr>
            <th>@Model.Pojisteni.Typ</th>
            <th>@Model.Pojisteni.Castka</th>
            <th></th>
        </tr>
        <tr>
            <td>
                <a asp-controller="Home" asp-action="DetailPojisteni" asp-route-id="">@Model.Pojisteni.Typ</a>
            </td>
            <td>@Model.Pojisteni.Castka</td>
            <td>
                <div class="">
                    <button class="btn btn-red">Odstranit</button>
                    <button class="btn btn-yellow">Editovat</button>
                </div>
            </td>
        </tr>
    </table>

    <div class="action-bar">
        <button class="btn btn-blue">Přidat pojištění</button>
        <button class="btn btn-yellow">Editovat pojištěnce</button>
        <button class="btn btn-red">Odstranit pojištěnce</button>
    </div>
</div>
</div>