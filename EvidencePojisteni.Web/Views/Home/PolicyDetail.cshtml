@model EvidencePojisteni.Web.Class.PojisteniPojisteneOsobyViewModel
@{
    ViewData["Title"] = "Insurance Details";
}

<div class="container">
    <h1>Insurance Details</h1>
    <div>
        <span class="label">Insurance Type</span>
        <span class="value">@Model.Policy.InsuranceType</span>
    </div>
    <div>
        <span class="label">Insured Person</span>
        <span class="value">@Model.Person.FirstName @Model.Person.LastName</span>
    </div>
    <div>
        <span class="label">Valid From</span>
        <span class="value">@Model.Contract.ValidFrom</span>
    </div>
    <div class="info-row">
        <span class="label">Valid To</span>
        <span class="value">@Model.Contract.ValidTo</span>
    </div>
    <div>
        <span class="label">Insured Amount</span>
        <span class="value">@Model.Contract.Amount</span>
    </div>
    <div>
        <span class="label">Status</span>
        <span class="value">@Model.Contract.Active</span>
    </div>
    <div class="actions">
        <button class="secondary" type="button">Back</button>
        <button type="button">Edit</button>
    </div>
</div>